//programm to add even numbers for loop
 #include <iostream>
using namespace std;
int main() 
{

    int i, n, sum = 0;
    cout << "Print sum of even numbers: ";
    cin >> n;

    for(i = 1; i <= n; i++) 
    {
 // Check for even or not.
        if((i % 2) == 0)
        {

            sum += i;

        }
    }

    cout << endl << "Sum of even numbers from 1 to  " << n << " is : " << sum;

    return 0;
}
